{
  "name": "groundedposts",
  "version": "0.1.0",
  "description": "Multi-platform content generation CLI with verified sources and full provenance tracking",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "groundedposts": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "seed-context": "npx tsx src/context/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajanrengasamy/groundedposts.git"
  },
  "keywords": [
    "content-generation",
    "cli",
    "ai",
    "social-media",
    "linkedin",
    "threads",
    "twitter",
    "verified-content"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rajanrengasamy/groundedposts/issues"
  },
  "homepage": "https://github.com/rajanrengasamy/groundedposts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.0.0",
    "@google/generative-ai": "^0.24.1",
    "@lancedb/lancedb": "^0.23.0",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "openai": "^6.15.0",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
